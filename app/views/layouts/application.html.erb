<!doctype html>
  <!--[if lt IE 7]> <html class='no-js ie6 oldie' lang='en'> <![endif]-->
  <!--[if IE 7]>    <html class='no-js ie7 oldie' lang='en'> <![endif]-->
  <!--[if IE 8]>    <html class='no-js ie8 oldie' lang='en'> <![endif]-->
  <!--[if gt IE 8]> <html class='no-js' lang='en'> <![endif]-->
  <!--[if IE 6]><%= stylesheet_link_tag 'formtastic_ie6' %><![endif]-->
  <!--[if IE 7]><%= stylesheet_link_tag 'formtastic_ie7' %><![endif]-->
<html>

  <head>
	  <meta charset='utf-8'>
	  <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>

	  <title></title>
	  <meta name='description' content=''>
	  <meta name='author' content=''>

	  <meta name='viewport' content='width=device-width,initial-scale=1'>
	
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %> 
    
    <title>xaima.org - xaima xam xam</title>

  </head>
  
  <body>

  
  
  <div id='header-container'>
	  <header class='wrapper clearfix'>
		  <h1 id='title'>h1#title</h1>
		  <nav>
		    <% if current_user %>
		      <ul>
				    <li><%= link_to "exams", "#" %></li>
				    <li><%= link_to "people", "#" %></li>
				    <li><%= link_to "Log out", "sessions/destroy", :method => :delete %></li>
			    </ul>
          
        <% else %>
			    <ul>
				    <li><%= link_to "Sign up", new_profile_path %></li>
				    <li><%= link_to "log in", new_session_path %></li>
				    <li><%= link_to "about", "#" %></li>
			    </ul>
        <% end %>
		  </nav>
	  </header>
  </div>
  
  <div class='main-container'>
    <section class='wrapper clearfix' id="main">
      
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      
      <%= yield %>
    </section>  
  </div>

	<div id="footer-container">
		<footer class="wrapper">
			<h3>footer</h3>
		</footer>
	</div>  

  </body>
  
</html>
